# Copy to .env and adjust values
APP_NAME=ConnexxionEngine
DEBUG=false

# Database: change to your own Postgres URL
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/email_engine

# Redis
REDIS_URL=redis://localhost:6379/0

# Security: base64-encoded 32-byte key (e.g., from Python: base64.b64encode(os.urandom(32)).decode())
AES_SECRET_KEY=
# JWT configuration
JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=60

# CORS (comma-separated origins). Example for Vite dev server:
# CORS_ORIGINS=http://localhost:5173

# SMTP/IMAP
SMTP_USE_SSL=true
IMAP_USE_SSL=true
SMTP_TIMEOUT_SECONDS=15
IMAP_TIMEOUT_SECONDS=15